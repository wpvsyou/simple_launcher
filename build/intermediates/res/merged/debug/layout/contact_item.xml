<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingLeft="@dimen/contact_emergency_item_left_margin"
              android:paddingRight="@dimen/contact_emergency_item_right_margin">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include
                layout="@layout/call_item"
                android:id="@+id/phone_1_call"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></include>

            <include
                layout="@layout/call_item"
                android:id="@+id/phone_2_call"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></include>

            <include
                layout="@layout/call_item"
                android:id="@+id/phone_3_call"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></include>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_color"
        android:id="@+id/divider"/>

</LinearLayout>