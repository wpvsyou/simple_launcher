<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/register_launcher_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RegisterLauncherActivity" >

    <LinearLayout
        android:id="@+id/layout_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_marginBottom="20dp" >

        <TextView
            android:id="@+id/text_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/register_step3_title"
            android:gravity="center_vertical"
            android:layout_marginBottom="1px"
            android:background="@drawable/launcher_regist_bg"
            android:textSize="16sp"
            android:textColor="#676767"
            android:paddingLeft="13dp"
            />
        <TextView
            android:id="@+id/text_remarks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/register_step3_remarks"
            android:gravity="center_vertical"
            android:layout_marginBottom="10dp"
            android:background="@drawable/launcher_regist_bg"
            android:textSize="14sp"
            android:textColor="#676767"
            android:paddingLeft="13dp"
            />

        <Button
            android:id="@+id/btn_register_set"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/register_step3_set"
            android:background="@drawable/launcher_regist_pressed_btn_bg"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center_horizontal"
            android:textColor="#FFFFFF"
            />

        <Button
            android:id="@+id/btn_register_finish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_below="@+id/register_launcher"
            android:text="@string/register_finish"
            android:background="@drawable/launcher_regist_normal_btn_bg"
            android:textColor="#FFFFFF"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" >

        <TextView
            android:id="@+id/text_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="@string/register_step3_set_hint"
            android:textColor="#ff0033"
            android:gravity="center"
            android:layout_marginBottom="10dp" />

        <ImageView android:id="@+id/ivLauncherRegistDefault"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/launcher_regist_default_tips"
            android:layout_gravity="center_horizontal"
            />

        <ImageView android:id="@+id/ivCancelDefaultLauncher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/cancel_default_launcher"
            android:layout_gravity="center_horizontal"
            />

    </LinearLayout>


</LinearLayout>
