<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/contact_name_text_view"
            android:layout_weight="3"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/contact_emergency_name_number_font_size"
            android:singleLine="true"
            android:textColor="@color/contact_emergency_item_text_color"/>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="7">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/contact_emergency_item_padding"
                android:paddingRight="@dimen/contact_emergency_item_padding"
                android:paddingTop="@dimen/contact_emergency_item_padding"
                android:orientation="horizontal"
                android:weightSum="4">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:id="@+id/call_number_text_view"
                    android:textSize="@dimen/contact_emergency_name_number_font_size"
                    android:textColor="@color/contact_emergency_item_text_color"
                    android:singleLine="true"
                    android:layout_gravity="center_vertical"/>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/call_button"
                        android:src="@drawable/call_button"
                        android:background="@null"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"/>
                </RelativeLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider_color"
                android:id="@+id/divider"/>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>