<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/app_item_padding"
                android:descendantFocusability="blocksDescendants">

    <ImageView
        android:layout_width="@dimen/app_icon_width_height"
        android:layout_height="@dimen/app_icon_width_height"
        android:id="@+id/app_icon_imageview"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/app_icon_imageview"
        android:layout_marginLeft="16dp"
        android:layout_centerVertical="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/app_name_font_size"
            android:textStyle="bold"
            android:id="@+id/app_name_textview"
            android:maxWidth="180dp"
            android:singleLine="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:id="@+id/app_version_pkgsize_textview"
            android:textSize="@dimen/app_version_pkg_size_font_size"
            android:textColor="#a0a0a0"
            android:layout_marginTop="5dp"
            android:maxWidth="150dp"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/app_uninstall_button"
        android:text="@string/uninstall_button_text"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:background="@drawable/uninstall_button"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"/>
</RelativeLayout>