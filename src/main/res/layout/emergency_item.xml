<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingLeft="@dimen/contact_emergency_item_left_margin"
              android:paddingRight="@dimen/contact_emergency_item_right_margin">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/contact_emergency_item_padding"
        android:paddingBottom="@dimen/contact_emergency_item_padding"
        android:gravity="center_vertical"
        android:weightSum="10">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/emergency_call_name_text_view"
            android:textColor="@color/contact_emergency_item_text_color"
            android:layout_weight="5"
            android:gravity="center_vertical"
            android:textSize="@dimen/contact_emergency_name_number_font_size"
            android:singleLine="true"/>


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/emergency_call_number_text_view"
            android:textColor="@color/contact_emergency_item_text_color"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:textSize="@dimen/contact_emergency_name_number_font_size"/>


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/call_button"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:background="@null"
                android:src="@drawable/call_button"
                android:layout_marginRight="@dimen/contact_emergency_item_padding"/>
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_color"
        android:layout_marginTop="2dp"
        android:id="@+id/divider"/>
</LinearLayout>