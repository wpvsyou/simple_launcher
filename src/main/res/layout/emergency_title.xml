<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingLeft="@dimen/contact_emergency_item_padding"
              android:paddingRight="@dimen/contact_emergency_item_padding"
              android:paddingTop="@dimen/contact_emergency_item_padding">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/title_text_view"
        android:layout_gravity="center_vertical"
        android:paddingBottom="@dimen/contact_emergency_item_padding"
        android:textColor="@color/contact_emergency_title_color"
        android:textSize="@dimen/contact_emergency_title_font_size"
        android:layout_marginLeft="@dimen/contact_emergency_title_left_margin"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/contact_emergency_title_divider_color"
        android:id="@+id/divider"/>
</LinearLayout>